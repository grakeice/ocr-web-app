root = true

[*.{js,ts,mjs,mts,cjs,cts,jsx,tsx,json,jsonc,css,html}]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mdx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true